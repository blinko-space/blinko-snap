{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Blinko Snap",
  "version": "0.1.2",
  "identifier": "com.blinko-snap.app",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "skipTaskbar": true,
        "decorations": false,
        "fullscreen": false,
        "height": 250,
        "width": 500,
        "resizable": false,
        "center": true,
        "title": "Blinko Snap",
        "visible": false,
        "maximized": false,
        "transparent": true,
        "alwaysOnTop": true,
        "windowEffects": {
          "effects": [
            "mica"
          ]
        }
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "resources": [
      "icons/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "sql": {
      "sqlite": {
        "path": "blinko.db"
      }
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDcyNDQ5QTA2Nzc3RkQ1RkIKUldUNzFYOTNCcHBFY29TY0ZycHVkNnlWemVGeU5kTU5CTVlRY3hlMDNxbk9QZXVJV3puS3BVeHAK",
      "endpoints": [
        "https://github.com/blinko-space/blinko-snap/releases/latest/download/latest.json"
      ]
    }
  }
}